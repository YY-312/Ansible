pipeline {
    agent any
 
    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/YY-312/ansible.git', branch: 'main'
            }
        }
        stage('Set Permissions') {
            steps {
                sh 'chmod +x ./router.sh'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                sh 'sudo ./router.sh'
            }
        }
    }
}
